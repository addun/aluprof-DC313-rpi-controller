[Unit]
Description=Aluprof DC313 RPi Controller
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=__APP_DIR__
Environment=PYTHONPATH=__APP_DIR__/src
ExecStart=__APP_DIR__/start.sh
Restart=always
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target